currentBuild.displayName = "online-shopping-#"+currentBuild.number

pipeline{
    agent any
	environment{
        PATH = "/opt/apache-maven-3.6.3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
			   git credentialsId: 'github', url: 'https://github.com/dbee18/myweb/'
            }
        }
		
		stage("maven build"){
		    steps{
                sh "mvn -v"
               // sh "mvn clean package"
			}
		}
        
    }
}